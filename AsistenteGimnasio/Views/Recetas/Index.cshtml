@model  AsistenteGimnasio.Models.Receta

@{
    string Img= "";
    ViewBag.Title = "Receta";

    Img = "/Resources/Imagenes/" + Model.Imagen;
    if (Model.Imagen.Contains("http://") || Model.Imagen.Contains("https://"))
    {
        Img = Model.Imagen;
    }

}

<h2>@Model.Nombre</h2>

<div class="row">
    <div class="col-md-4">
        <div class="@*card*@ col-md-12 ">
            <div class="imagen-r">
                <img style="text-align:center; width:100%" src="@Img" @*width="400px*@"  />
            </div>
        </div>       
        <div class="card-ingredientes card col-md-12" @*style="height:100%;width:100% ;margin-left:2%; margin-right:50%;margin-top:2%"*@>
            <h5>Detalles</h5>
            -Proteínas: @Model.Proteinas
            <br />
            -grasa: @Model.grasa
            <br />
            -Hidratos de carbono: @Model.HidratosDeCrabono

        </div>
    </div>
    <div class="col-md-7 ">
        <div class="card-ingredientes card col-md-12" @*style="height:100%;width:100% ;margin-left:2%; margin-right:50%;margin-top:2%"*@>
            <h5>Ingredientes</h5>
            @Model.Ingredientes
        </div>
        <div class="card col-md-12">
            <h5>Procedimiento</h5>
            @Model.Procedimiento
        </div>
    </div>

</div>

