                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 pr-1">
                                <div class="form-group bmd-form-group is-filled">
                                    <label class="bmd-label-static">Email</label>
                                    <input type="text" class="form-control" name="Email" value="@Model.Email">
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group bmd-form-group is-filled">
                                    <label class="bmd-label-static">Fecha de Nacimiento</label>
                                    @*<input class="input--style-4 js-datepicker" type="text" name="Fecha_Nacimiento">*@
                                    <input type="date" @*disabled=""*@ class="form-control js-datepicker" name="Fecha_de_Nacimiento" value="@Model.Fecha_de_Nacimiento">
                                    <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 pr-1">
                                <div class="form-group bmd-form-group is-filled">
                                    <label class="bmd-label-static">Sexo</label>
                                    <select class="form-control" name="Sexo" id="Sexo">
                                        @if (Model.Sexo == "Masculino")
                                        {
                                            <option value="Masculino" selected>Masculino</option>
                                            <option value="Femenino">Femenino</option>
                                        }
                                        else
                                        {
                                            <option value="Masculino">Masculino</option>
                                            <option value="Femenino" selected>Femenino</option>
                                        }


                                    </select>

                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group bmd-form-group is-filled">
                                    <label class="bmd-label-static">Fecha de Registro</label>
                                    <input type="text" disabled="" class="form-control" name="Fecha_Registro" value="@Model.Fecha_Registro">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group bmd-form-group is-filled">
                                    <label class="bmd-label-static">Dirección</label>
                                    <input type="text" class="form-control" name="Direccion" placeholder="Home Address" value="@Model.Direccion">
                                </div>
                            </div>
                        </div>

                        <div style="text-align:center"><button type="submit" class="btn btn-info btn-fill">Actualizar Perfil</button></div>

                        <div class="clearfix"></div>
                    }
                </div>
            </div>
